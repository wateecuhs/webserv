server{
	server_name _ panger.42.com *.alermolo.42.com;
	listen 80.123.35.46;

	error_pages 402 error_pages/402.html;
	body_size 1048;
	location /users/ {
		try_files $uri $uri/ =404;
		root /root/my_websiste/build;
		index index.html;

		auth_basic "Restricted Access";
		auth_basic_user_file /etc/nginx/.htpasswd;
	}
	location /games/ {
		try_files $uri $uri/ =404;
		root /root/my_websiste/build;
		index index.html;

		auth_basic "Restricted Access";
		auth_basic_user_file /etc/nginx/.htpasswd;
	}
}

server {
        listen 3000;

        server_name _;

        location / {
                try_files $uri $uri/ =404;
                root /root/my_websiste/build;
                index index.html;

                auth_basic "Restricted Access";
                auth_basic_user_file /etc/nginx/.htpasswd;
        }
}